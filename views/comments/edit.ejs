

<% include ../partials/header %>

<div class="container text-center">
    <h1>Edit comment</h1>
        <form action="/campgrounds/<%=campground_id%>/comments/<%= comment._id %>?_method=PUT" method="post">
            <div class="form-group row justify-content-center">
                <div class="col-sm-8 col-lg-5">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %>">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-8 col-lg-5">
                    <button class="btn btn-lg btn-primary btn-block">Post Comment</button>
                </div>
            </div>
        </form>
    
    <a href="/campgrounds">Back to campgrounds</a>
</div>

<% include ../partials/footer %>
