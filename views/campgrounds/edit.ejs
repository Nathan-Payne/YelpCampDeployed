<% include ../partials/header %>

<div class="container text-center">
    <h1>Edit <%=campground.name%></h1>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="name" value="<%=campground.name%>">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-8 upload-image">
                    <label for="image">Image Upload: </label>
                    <input class="form-control" type="file" id="image" name="image" accept="image/*">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="description" value="<%=campground.description%>">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%=campground.location%>">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-8">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
    
    <a href="/campgrounds">BACK</a>
</div>

<% include ../partials/footer %>
