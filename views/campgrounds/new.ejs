<% include ../partials/header %>

<div class="container text-center">
    <h1>Create a new campground</h1>
        <form action="/campgrounds" method="post" enctype="multipart/form-data">
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
            </div>
            <!-- <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
            </div> -->
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <!-- <label for="location">Location</label> -->
                    <input class="form-control" type="text" name="location" id="location" placeholder="Location (e.g. Sibelius Monument)">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <label for="image">Image</label>
                    <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-8">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
    
    <a href="/campgrounds">BACK</a>
</div>

<% include ../partials/footer %>
